@using TicketSystem.BL.ViewModels;
@model List<ReadVM>

<a asp-action="Add" class="btn btn-primary ms-3 mb-3">Add Ticket</a>

<div class="container">
    @foreach(var item in Model)
    {
        <div class="card mb-4">
            <div class="card-body">
                <p>Title: @item.Title</p>
                <p>Severity: @item.Severity</p>
                <p>Description: @item.Description</p>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-info me-3 text-white">Edit</a>
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
            </div>
        </div>
    }
</div>