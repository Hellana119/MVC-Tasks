@model EditTicketVM
@{
    var departments = ViewData[magicStrings.Departments] as List<SelectListItem> ?? new List<SelectListItem>();
}
<form asp-action="Add" method="post">

    <div class="form-group col-6">
        <input asp-for="IsClosed" name="IsClosed" />
        <label asp-for="IsClosed">Closed</label>
    </div>

    <div class="form-group col-6">
        <label asp-for="Id">Closed</label>
        <input asp-for="Id" disabled />
    </div>

    <div class="form-group col-6">
        <input asp-for="IsClosed" name="IsClosed" />
        <label asp-for="IsClosed">Closed</label>
    </div>

    <div class="form-group">
        <label asp-for="Severity">Severity</label>
        <select asp-for="Severity" asp-items="Html.GetEnumSelectList<Severity>()"></select>
    </div><br />

    <div class="form-group">
        <label asp-for="Description">Description</label>
        <textarea asp-for="Description"></textarea>
    </div><br />

    <div class="form-group">
        <label asp-for="DepartmentId"></label>
        <select asp-for="DepartmentId" asp-items="departments"></select>
    </div><br />

    <div class="form-group">
        <label asp-for="DevelopersIds"></label>
        <select asp-for="DevelopersIds" asp-items="ViewBag.developerListItems"></select>
    </div><br />

    <button class="btn btn-secondary">Submit</button>
</form>